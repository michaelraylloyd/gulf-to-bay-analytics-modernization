{
            "name": "[concat(parameters('factoryName'), '/LS_AzureSQL_OLTP')]",
            "type": "Microsoft.DataFactory/factories/linkedServices",
            "apiVersion": "2018-06-01",
            "properties": {
                "description": "Linked Service for connecting ADF to the Azure SQL OLTP source database used for AdventureWorks ETL processing.",
                "annotations": [],
                "type": "AzureSqlDatabase",
                "typeProperties": {
                    "server": "[parameters('LS_AzureSQL_OLTP_properties_typeProperties_server')]",
                    "database": "[parameters('LS_AzureSQL_OLTP_properties_typeProperties_database')]",
                    "encrypt": "optional",
                    "trustServerCertificate": false,
                    "authenticationType": "SQL",
                    "userName": "[parameters('LS_AzureSQL_OLTP_properties_typeProperties_userName')]",
                    "password": {
                        "type": "SecureString",
                        "value": "[parameters('LS_AzureSQL_OLTP_password')]"
                    }
                }
            },
            "dependsOn": []
        }